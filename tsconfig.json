{
    "compilerOptions": {
        "declaration": true,
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "sourceMap": false,
        "declarationDir": "dist",
        "outDir": "build"
    },
    "include": ["./src/**/*"]
}
